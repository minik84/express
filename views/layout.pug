doctype html
mixin item(title, url)
  li(class='item-list')
     a(href=url class=`item ${path === url ? 'active' : ''}` )=title

html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    nav
      ul
        +item('Strona Główna', '/')
        +item('Aktualności', '/news')
        +item('Quiz', '/quiz')
        +item('Admin', '/admin')

    block content
